# SecureSight Windows Agent Configuration
# Copy this file to agent.yaml and update with your settings

# API Configuration
api_url: "http://localhost:8000"
api_key: "your-api-key-here"

# Agent hostname (optional, defaults to system hostname)
# hostname: "workstation-01"

# Event logs to monitor
event_logs:
  - name: "Security"
    # Event types to collect (all types if empty)
    # event_types: [1, 2, 4, 8, 16]  # error, warning, info, audit_success, audit_failure
  
  - name: "System"
  
  - name: "Application"
  
  # Add custom event logs
  # - name: "Microsoft-Windows-Sysmon/Operational"
  # - name: "Microsoft-Windows-PowerShell/Operational"

# Batch settings
batch_size: 100
flush_interval: 5  # seconds
poll_interval: 1   # seconds between event log polls

# Retry settings
retry_attempts: 3

# State file location
state_file: "C:\\ProgramData\\SecureSight\\agent_state.json"
